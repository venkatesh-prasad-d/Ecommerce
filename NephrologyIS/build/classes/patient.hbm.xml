<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD//EN" 
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping package="com.nephrology.bean">
 	<class name="PatientBean" table="patientlist">
 		<id name="patientId" column="patientid" type="string"></id>
 		<property name="patientName" column="patientname" type="string"></property>
 		<property name="patientAge" column="patientage" type="int"></property>
 		<property name="patientSex" column="patientsex" type="string"></property>
 		<property name="doc_id" column="doc_id" type="string"></property>
 	</class>
 
 </hibernate-mapping>